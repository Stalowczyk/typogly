{
  "name": "typogly",
  "version": "1.0.0",
  "description": "A lightweight JavaScript/TypeScript library that scrambles text using the typoglycemia effect â€” keeping it readable while shuffling middle letters",
  "license": "MIT",
"author": "Pawel Stalowczyk <pawel.stalowczyk@gmail.com>",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build"
  },
  "keywords": [
    "text",
    "scramble",
    "typoglycemia",
    "readable",
    "string",
    "word",
    "shuffle",
    "typography",
    "text-manipulation",
    "cambridge",
    "fun"
  ],
 "repository": {
  "type": "git",
  "url": "https://github.com/Stalowczyk/typogly.git"
},
"bugs": {
  "url": "https://github.com/Stalowczyk/typogly/issues"
},
"homepage": "https://github.com/Stalowczyk/typogly#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
  "@types/node": "^20.11.16",
  "@typescript-eslint/eslint-plugin": "^8.0.0",
  "@typescript-eslint/parser": "^8.0.0",
  "@vitest/coverage-v8": "^1.2.2",
  "eslint": "^8.56.0",
  "prettier": "^3.2.5",
  "tsup": "^8.5.0",
  "typescript": "^5.3.3",
  "vitest": "^1.2.2"
}
}